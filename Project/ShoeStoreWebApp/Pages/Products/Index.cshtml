@page
@model ShoeStoreWebApp.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Продукты";
}

<h1>Список товаров</h1>

<!-- Форма фильтров -->
<form method="get" class="mb-4">
    <div class="row">
        <div class="col-md-2">
            <label>Поиск по описанию:</label>
            <input asp-for="SearchDescription" class="form-control" />
        </div>
        <div class="col-md-2">
            <label>Производитель:</label>
            <select asp-for="SelectedManufacturerId" class="form-control" asp-items="@(new SelectList(Model.Manufacturers, "ManufacturerId", "Name"))">
                <option value="">Все производители</option>
            </select>
        </div>
        <div class="col-md-2">
            <label>Цена не более:</label>
            <input asp-for="MaxPrice" type="number" class="form-control" />
        </div>
        <div class="col-md-2">
            <label>Сортировка:</label>
            <select asp-for="SortBy" class="form-control">
                <option value="">По умолчанию</option>
                <option value="name">По названию</option>
                <option value="supplier">По поставщику</option>
                <option value="price">По возрастанию цены</option>
                <option value="price-desc">По убыванию цены</option>
            </select>
        </div>
        <div class="col-md-2 style=" margin-top: 24px;>
            <div class="form-check">
                <input asp-for="HasDiscount" class="form-check-input" />
                <label class="form-check-label">Только со скидкой</label>
            </div>
            <div class="form-check">
                <input asp-for="InStock" class="form-check-input" />
                <label class="form-check-label">Только в наличии</label>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Применить</button>
</form>

<!-- Карточки товаров -->
<div class="row">
    @foreach (var p in Model.Products)
    {
        var discount = p.Discount.GetValueOrDefault(0);
        var finalPrice = Math.Round(p.Price * (1 - discount / 100.0));
        var hasDiscount = discount > 0;
        var imagePath = !string.IsNullOrEmpty(p.Image) ? $"/images/{p.Image}" : "/images/picture.png";

        <div class="col-md-12 mb-4">
            <div class="card h-100 shadow-sm @(discount > 15 ? "discount-high" : "")">
                <div class="row g-0">

                    <div class="col-md-4">
                        <img src="@imagePath" class="img-fluid rounded-start h-100 w-100" style="object-fit: cover;" alt="Фото товара" />
                    </div>

                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                @p.Category?.Name
                            </h5>

                            <p class="card-text">
                                <strong>Описание товара:</strong> @(string.IsNullOrEmpty(p.Description) ? "—" : p.Description)
                            </p>

                            <p class="card-text"><strong>Производитель:</strong> @p.Manufacturer?.Name</p>
                            <p class="card-text"><strong>Поставщик:</strong> @p.Supplier?.Name</p>

                            <p class="card-text">
                                <strong>Цена:</strong>
                                @if (hasDiscount)
                                {
                                    <span class="strike text-danger me-2">@p.Price</span>
                                    <span class="text-success fw-bold">@finalPrice</span>
                                }
                                else
                                {
                                    @p.Price
                                }
                            </p>
                            <p class="card-text"><strong>Единица измерения:</strong> @p.Unit</p>
                            <p class="card-text"><strong>Количество на складе:</strong> @p.Quantity</p>

                            @if (hasDiscount)
                            {
                                <div class="position-absolute top-0 end-0 p-3">
                                    <div class="bg-success text-white p-3 rounded shadow text-center" style="min-width: 140px;">
                                        <div class="fs-4 fw-bolder">@discount%</div>
                                    </div>
                                </div>
                            }

                            <div class="mt-auto">
                                @if (!User.Identity.IsAuthenticated)
                                {
                                    <a asp-page="/Login" asp-route-returnUrl="/Products/Index" class="btn btn-primary">Заказать</a>
                                }
                                else
                                {
                                    <form method="post" asp-page-handler="Order" asp-route-productId="@p.ProductId" class="d-inline">
                                        <button type="submit" class="btn btn-primary">Заказать</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
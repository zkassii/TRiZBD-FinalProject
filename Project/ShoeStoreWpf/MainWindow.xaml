<Window x:Class="ShoeStoreWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="250" Width="400"
        Background="White" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image Source="/Images/Icon.png" Height="30" HorizontalAlignment="Left"/>
        <TextBlock Text="Логин:" FontFamily="Times New Roman" Margin="10" Grid.Row="1"/>
        <TextBox x:Name="LoginTextBox" Margin="10" Grid.Row="1" HorizontalAlignment="Right" Width="200"/>
        <TextBlock Text="Пароль:" FontFamily="Times New Roman" Margin="10" Grid.Row="2"/>
        <PasswordBox x:Name="PasswordBox" Margin="10" Grid.Row="2" HorizontalAlignment="Right" Width="200"/>
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="10">
            <Button Content="Войти" Click="LoginButton_Click" Background="#00FA9A" Margin="5"/>
            <Button Content="Войти как гость" Click="GuestLogin_Click" Background="#00FA9A" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>